<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/holo_blue_bright"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center_horizontal|center_vertical"
        android:text="About Us"
        android:textColor="#FF0000"
        android:textSize="30sp" />

    <TextView
        android:background="@android:color/holo_blue_dark"

        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:text="App Infomation :"
        android:textColor="#FF0000"
        android:textColorHighlight="@color/design_default_color_primary" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This App show the bus stop code and provide the information to users." />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:fontFamily="sans-serif"
        android:text="Users can using this App to search for the bus stop code which show at the bus stop. It allow users to know where are the location will go." />

    <TextView
        android:background="@android:color/holo_blue_dark"
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:text="Feedback :"
        android:textColor="#FF0000"
        android:textColorHighlight="#FF0000" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:text="You can send your feedback to this gmail : yehongle@gmail.com" />

    <TextView
        android:background="@android:color/holo_blue_dark"
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:text="Develop By :"
        android:textColor="#FF0000" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yap Hong Le" />

</LinearLayout>